<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomeCVStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/light_orange_1</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/black</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/black</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/light_orange_1</item>
    </style>
    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/light_orange_1</item>
        <item name="colorPrimary">@color/light_orange_1</item>
    </style>
</resources>