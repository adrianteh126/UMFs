<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_1"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="406dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="70dp"
        android:background="@drawable/view_profile"
        android:elevation="10dp"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/Circular" />

        <TextView
            android:id="@+id/ETUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_medium"
            android:text="srh.k"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/ETFaculty"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Faculty of Computer Science and Information Technology"
            android:textAlignment="center"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ETBio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="I'm a cupcake in search for her stud muffin."
            android:textAlignment="center"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="500dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/BTEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/edit"
            android:elevation="10dp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="500dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/setting"
            android:elevation="10dp"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
    </LinearLayout>

</FrameLayout>